@model IEnumerable<FileUploadAspNetCore.Variables.FileDetails>
@{
    ViewData["Title"] = "Home Page";
}

<h1>File Upload Asp Net Core</h1>
<hr />
@using (Html.BeginForm("ImportFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   <div class="form-horizontal">
       <div class="form-group">
           <input type="file" name="file" />
       </div>
       <div class="form-group">
           <button type="submit" class="btn btn-info">Submit</button>
       </div>
   </div>
}

<table>
    <tr>
        <th>File path</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a href="@item.FullPath">@item.Filename</a></td>
        </tr>
    }
</table>
